# Configuration de l'application
NODE_ENV=development
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Configuration de l'application
APP_NAME="Questionnaire Schneider"
APP_VERSION="1.0.0"
APP_URL=http://localhost:3000

# Configuration de la base de données (pour future migration)
# DATABASE_URL=postgresql://user:password@localhost:5432/questionnaire_db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=questionnaire_db
# DATABASE_USER=user
# DATABASE_PASSWORD=password

# Configuration de sécurité
# JWT_SECRET=your-jwt-secret-key
# ENCRYPTION_KEY=your-encryption-key

# Configuration des emails (pour future fonctionnalité)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Configuration des uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# Configuration du logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration de monitoring
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
